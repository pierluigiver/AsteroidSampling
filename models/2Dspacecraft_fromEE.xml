<mujoco model="2DspacecraftEE">
  <option gravity="0 0 0"/>
 
  <contact>
    <pair geom1="link1_geom" geom2="surface" solref="0.02 1" friction="1 0.5 0.5"/>
  </contact>

  <worldbody>
    
    <body name="endmass" pos="0 0 0.2">
      <geom type="sphere" size="0.01" name="endmass_geom"/>
      <inertial pos="0 0 0" mass="1" diaginertia="0.001 0.001 0.001"/>
      <joint name="endmass" type="free"/>
      
      <body name="link1" pos="0 0 0">
        <geom type="capsule" fromto="0 0 0 0 0 2" size="0.05" name="link1_geom"/>
        <inertial pos="0 0 1" mass="1" diaginertia="0.33 0.33 0.00125"/>

        <body name="link2" pos="0 0 2">
          <geom type="capsule" fromto="0 0 0 0 0 2" size="0.05"/>
          <inertial pos="0 0 1" mass="1" diaginertia="0.33 0.33 0.00125"/>
          <joint name="tau1" type="hinge" axis="0 -1 0" pos="0 0 0"/>

          <body name="spacecraft" pos="0 0 2">
            <geom type="sphere" size="0.01" mass="420"/>
            <inertial pos="0 0 0" mass="420" diaginertia="280 280 280"/>
            <joint name="tau2" type="hinge" axis="0 -1 0" pos="0 0 0"/>
          </body>
        </body>
      </body>
    </body>

    <body name="terrain" pos="0 0 0">
      <geom name="surface" type="plane" pos="0 0 -0.05" size="5 5 1"/>
      <site name="endmass_site" pos="0 0 -0.1"/>
    </body>
  </worldbody>
  
    <actuator>
      <!-- Joint motors  -->
      <motor joint="tau1"/>
      <motor joint="tau2"/>
    </actuator>
    
    <sensor>
      <!-- Force sensor for end mass contact -->
      <force name="endmass_force" site="endmass_site"/>
    </sensor>
  </mujoco>
